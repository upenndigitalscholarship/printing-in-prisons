{% extends "base.njk" %}
{% block content %}
{{ content | safe }}

<div class="container-collections widest">
{# {%- css %}.postlist { counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }} }{% endcss %} #}
<ul reversed class="postlist" style="list-style-type:none">
{%- for post in collections.blog | reverse -%}
	<li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
		<div class="element-centered wider short flex">
				<div class="wide">
				<!-- <img src="/assets/img/{{ post.data.thumbnail }}" /> -->
				<h2>
					<a href="{{ post.url }}" class="postlist-link">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
				</h2>
				<p>{{ post.data.description }}</p>
				</div>
				<div class="third">
				<h4>{{ post.data.author }}</h4>
				<img width="50px" src="{{ '/assets/logos/manicule.svg' | url }}" />
				</div>
	</div>
		</div>
	</li>
{% endfor %}
</ul>
</div>
{% endblock %}

	<div class="wide">
